                    stages["4_p4d_ubuntu2004"] = get_test_stage_with_lock("4_p4d_ubuntu2004", env.BUILD_TAG, "ubuntu2004", "p4d.24xlarge", p4d_region, p4d_lock_label, num_instances, p4d_odcr, "${p4d_addl_args} --container-os ubuntu2004")
                    stages["4_p4d_ubuntu2204"] = get_test_stage_with_lock("4_p4d_ubuntu2204", env.BUILD_TAG, "ubuntu2004", "p4d.24xlarge", p4d_region, p4d_lock_label, num_instances, p4d_odcr, "${p4d_addl_args} --container-os ubuntu2204")

                    // p5 tests
                    p5_addl_args = "${p4_p5_addl_args} ${persistent_manual_cluster_addl_args} ${container_addl_args}"
                    num_instances = 2
                    stages["2_p5_alinux2"] = get_test_stage_with_lock("2_p5_alinux2", env.BUILD_TAG, "alinux2", "p5.48xlarge", p5_region, p5_lock_label, num_instances, p5_odcr, "${p5_addl_args} --container-os alinux2")
                    stages["2_p5_ubuntu2004"] = get_test_stage_with_lock("2_p5_ubuntu2004", env.BUILD_TAG, "alinux2", "p5.48xlarge", p5_region, p5_lock_label, num_instances, p5_odcr, "${p5_addl_args} --container-os ubuntu2004")
                    stages["2_p5_ubuntu2204"] = get_test_stage_with_lock("2_p5_ubuntu2204", env.BUILD_TAG, "alinux2", "p5.48xlarge", p5_region, p5_lock_label, num_instances, p5_odcr, "${p5_addl_args} --container-os ubuntu2204")

                    parallel stages
                }
            }
        }
    }
    post {
        always {
            sh 'find outputs -name "*.xml" | xargs du -shc'
            junit testResults: 'outputs/**/*.xml', keepLongStdio: false
            archiveArtifacts artifacts: 'outputs/**/*.*'
        }
        failure {
            sh 'echo "Jenkins pipeline has failed."'
        }
        aborted {
            sh 'echo "Jenkins pipeline aborted."'
        }
        cleanup {
            deleteDir()
        }
    }
}
